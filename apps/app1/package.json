{
  "name": "@pjore/app1",
  "version": "1.0.0",
  "description": "DigitalOffice app1 is the main backend of DigitalOffice. It provides an API with primary purpose to serve the DigitalOffice app (ie. the frontend). To use the API you need to authenticate using public/signin endpoint. This will generate an token that needs to be passed as bearer token in every request",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy-assets",
    "clean": "rimraf -rf ../../dist",
    "compile": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "copy-assets": "cp -r ./src/assets ../../dist/apps/app1/src",
    "spec": "yarn run tsoa spec",
    "routes": "yarn run tsoa routes",
    "sdk": "npx @openapitools/openapi-generator-cli generate -i src/generated/swagger.json -g typescript-axios -o ../../packages/app1-sdk/src",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:nodemon": "nodemon src/index.ts",
    "start:ts-node": "node -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "start:dist": "node ../../../dist/apps/app1/src/index.js",
    "dev": "concurrently \"yarn run start:nodemon\" \"nodemon -x tsoa spec-and-routes\" \"yarn run sdk\"",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pjore/node-ddd-boilerplate.git"
  },
  "dependencies": {
    "@pjore/common": "*",
    "auto-bind": "^4.0.0",
    "axios": "^0.21.4",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dayjs": "^1.10.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "randomstring": "^1.3.0",
    "swagger-ui-express": "^4.5.0",
    "tsoa": "^5.1.1"
  },
  "keywords": [],
  "author": "Per Linde",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/connect-timeout": "0.0.34",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/lodash": "^4.14.170",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.37",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/parser": "^4.21.0",
    "concurrently": "^7.4.0",
    "eslint": "^7.23.0",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "ts-node": "~10.7.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "tsoa": "^5.1.1",
    "typescript": "^4.8.4"
  }
}
