{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [],
    "jsx": "react",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "noEmit": false,
    "resolveJsonModule": true
  }
}
